<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="j2store" method="upgrade">
	<name>Wishlist</name>
	<version>1.19</version>
	<creationDate>JAN 2018</creationDate>
	<author>J2Store</author>
	<authorEmail>supports@j2store.org</authorEmail>
	<authorUrl>http://www.j2store.org</authorUrl>
	<copyright>2017 WeblogicxIndia</copyright>
	<license>GNU General Public License v2</license>
	<description>PLG_J2STORE_APP_WISHLIST_DESC</description>
	<scriptfile>script.app_wishlist.php</scriptfile>
	<files>
		<filename plugin="app_wishlist">app_wishlist.php</filename>
		<folder>app_wishlist</folder>
		<filename>index.html</filename>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_j2store_app_wishlist.ini</language>
		<language tag="en-GB">en-GB.plg_j2store_app_wishlist.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" label="J2STORE_BASIC_SETTINGS" addfieldpath="/administrator/components/com_j2store/models/fields">			
				<field name="empty_wishlistitem" type="radio" default="0" class="btn-group"
					   label="j2store_conf_empty_wishlistitem_in_wishlist_label" 
					   description="j2store_conf_empty_wishlistitem_in_wishlist_desc" >
					<option value="1">J2STORE_YES</option>
					<option value="0">J2STORE_NO</option>					
				</field>				
				<field name="product_view_type" type="radio" default="list" class="btn-group" 
					   label="j2store_wishlist_conf_product_view_type_label" 
					   description="j2store_wishlist_conf_product_view_type_desc" >
					<option value="list">J2STORE_PRODUCT_LIST_LAYOUT</option>
					<option value="article">J2STORE_NATIVE_ARTICLE_LAYOUT</option>					
				</field>							
				<field name="thumbimage_width" type="text" default="50" 
				  label="J2STORE_CONTENT_THUMB_IMAGE_WDITH" />				  
				<field name="addwishlist_type" type="radio"  class="btn-group" default="text" 
					   label="j2store_wishlist_conf_wishlist_link_type" 
					   description="j2store_wishlist_conf_wishlist_link_type_desc">					   
					    <option value="text">J2STORE_APP_WIHSLIST_LINK_TYPE_TEXT</option>
						<option value="icon">J2STORE_APP_WIHSLIST_LINK_TYPE_ICON</option>
				</field>
				
				
				<field name="link_display_text" id="link-as-text" type="text" default="J2STORE_ADD_TO_WISHLIST"  
				  label="j2store_wishlist_conf_wishlist_link_type_display_text" />	
				  		
				<field name="link_display_icon" id="link-as-icon"  type="text" default="fa-heart"  
				  label="j2store_wishlist_conf_wishlist_link_type_display_icon" />

				<field name="added_link_display_icon" id="added-link-as-icon"  type="text" default="fa-heart"
					   label="j2store_wishlist_conf_wishlist_added_link_display_icon" />
				
				<field name="link_display_text_wishlist" type="text" default="J2STORE_WIHSLIT_BROWSE_WIHSLIST_VIEW"  
				  label="j2store_wishlist_conf_wishlist_link_type_display_text_wishlist_view" />


			   <field name="enable_redirect_to_wishlist" type="radio" default="0" class="btn-group"			      
					  label="j2store_wishlist_conf_wishlist_enable_redirect_to_wishlist_view" >				 
					 <option value="1">J2STORE_ENABLE</option>
					 <option value="0">J2STORE_DISABLE</option>	
			 	</field>
	 		</fieldset>
		</fields>
	</config>
</extension>
